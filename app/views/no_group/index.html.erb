<h1>This transaction has no group</h1>
<% @no_group_transactions.each do |transaction| %>
    <% if !transaction.group %>
    <div class="d-inline">
      <div class="d-inline-block">
      <%=  image_tag("nogroup.png", class:"rounded-circle", style:"width:80px; height:80px") %>
      </div>
      <div class="d-inline-block align-middle">
        <h5><%= transaction.name %> </h5>
        <small><%= transaction.created_at.strftime('%B %d %Y') %></small>
      </div>
    </div>
    <div class="d-inline">
      <strong>Paid amount $<%= transaction.amount %></strong>
    </div>
    <br>
    <% end %>
  <% end %>