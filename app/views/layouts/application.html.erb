  </head>

  <body>
  <div class="container">
    <div class="row">
      <div class="col">
      </div>
      <div class="col-6">
      
  
        <nav class="navbar navbar-dark bg-primary container">
          <a class="navbar-brand" href="<%= root_path %>">Home</a>
